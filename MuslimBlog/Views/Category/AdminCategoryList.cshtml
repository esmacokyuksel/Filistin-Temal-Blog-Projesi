@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>


<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">KATEGORİ LİSTESİ</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                KATEGORİ ADI

                            </th>

                            <th style="width: 15%">

                                SON BLOGLAR

                            </th>

                            <th style="width: 8%">

                                KATEGORİ BAR

                            </th>

                            <th style="width: 8%" class="text-center">

                                DURUM

                            </th>

                            <th style="width: 21%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>

                                    @item.CategoryId

                                </td>

                                <td>
                                    @item.CategoryName
                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                        </li>

                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">

                                        </div>

                                    </div>

                                    <small>

                                        57% Complete

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge badge-success">
                                        @item.CategoryStatus
                                </span>

                            </td>

                            <td class="project-actions text-right">

                                <a class="btn btn-primary btn-sm" href="/Blog/BlogByCategory/@item.CategoryId">

                                    <i class="fas fa-folder">

                                    </i>

                                    YAZILAR

                                </a>

                                <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@item.CategoryId">

                                    <i class="fas fa-pencil-alt">

                                    </i>

                                    DÜZENLE

                                </a>

                                <a class="btn btn-danger btn-sm" href="/Category/CategoryDelete/@item.CategoryId">

                                    <i class="fas fa-trash">

                                    </i>

                                    SİL

                                </a>
                                <a class="btn btn-outline-secondary btn-sm" href="/Category/CategoryStatusTrue/@item.CategoryId">

                                    <i class="fas fa-atom">

                                    </i>

                                    Aktif Yap

                                </a>

                            </td>

                        </tr>
                    }
                    </tbody>


                </table>


            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
        Yeni Kategori Ekle
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">
                        Yeni kategori ekleme paneli
                    </h2>
                </div>
                <form method="post" action="/Category/AdminCategoryAdd/">
                    <div class="modal-body">
                        <label>Kategori Adı:</label>
                        <input type="text" name="CategoryName" class="form-control" />
                        <label>Kategori Açıklaması:</label>
                        <input type="text" name="CategoryDescription" class="form-control" /><br />
                        <br /><button class="btn btn-warning">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>



